add-font(name = 'default', src = '', weight = normal, style = normal)
  @font-face
    font-family: name
    font-weight: weight
    font-style: style

    src: url(src + '.eot')
    src: url(src + '.eot?#iefix') format('embedded-opentype'), url(src + '.woff') format('woff'), url(src + '.ttf') format('truetype');